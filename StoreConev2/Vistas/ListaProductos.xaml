<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StoreConev2.VistaModelo"
             x:Class="StoreConev2.Vistas.ListaProductos"
             Title="ListaProductos">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Seccion A" Order="Secondary" Command="{Binding IrSeccionACommand}"></ToolbarItem>
        <ToolbarItem Text="Seccion B" Order="Secondary" Command="{Binding}"></ToolbarItem>
        <ToolbarItem Text="Seccion C" Order="Secondary" Command="{Binding}"></ToolbarItem>
        <ToolbarItem Text="Seccion D" Order="Secondary" Command="{Binding}"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Productos}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" CornerRadius="10" BorderColor="LightGray" BackgroundColor="White" HasShadow="True">
                        <Grid Padding="10" RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0" Source="{Binding Imagen}" Aspect="AspectFill" />
                            <StackLayout Grid.Row="1">
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="Large" />
                                <Label Text="{Binding Codigo}" FontSize="Small" />
                                <Label Text="{Binding Seccion}" FontSize="Small" />
                                <Label Text="{Binding proveedor.Nombre}" FontSize="Small" />
                                <Label Text="{Binding Precio}" FontSize="Medium" />
                                <Label Text="{Binding Descripcion}" FontSize="Small" />
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
