<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StoreConev2.Vistas.VistaPreviaProducto"
             xmlns:magic="clr-namespace:MagicGradients;assembly=MagicGradients"
             Title="VistaPreviaProducto">
    <Grid BackgroundColor="#B7F8F4">
        
<Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" BackgroundColor="#9FA407" Margin="0,0,0,0">
            
            <Label Text="Store Cone" FontFamily="kawaii" VerticalOptions="Center" FontSize="25" HorizontalOptions="Center" TextColor="Yellow" />
            <Frame  Padding="0"   BackgroundColor="#9FA407">
                <Image Source="https://i.ibb.co/0MtrR1f/logo-2.png" HeightRequest="60" Margin="0,0,0,0" />
            </Frame>
        </StackLayout>
        <Label Text="Nombre:" Grid.Row="1" Grid.Column="0" Margin="10"  FontSize="20" TextColor="#D57E00" />
        <Entry Grid.Row="1" Grid.Column="1" Margin="10" />


        <Label Text="Cantidad:" Grid.Row="2" Grid.Column="0" Margin="10"  FontSize="20" TextColor="#D57E00"/>
        <Entry Grid.Row="2" Grid.Column="1" Margin="10" Keyboard="Numeric" />


        <Label Text="Código:" Grid.Row="3" Grid.Column="0" Margin="10" FontSize="20" TextColor="#D57E00" />
        <Entry Grid.Row="3" Grid.Column="1" Margin="10" Keyboard="Numeric" />

        <Label Text="Sección:" Grid.Row="4" Grid.Column="0" Margin="10"  FontSize="20" TextColor="#D57E00"/>
        <Entry Grid.Row="4" Grid.Column="1" Margin="10" />


        <StackLayout Grid.Row="1" Spacing="40" Margin="0,0,0,0" Orientation="Horizontal" Grid.Column="2"   HorizontalOptions="CenterAndExpand">
            <Button Text="Sumar" FontFamily="kawaii3" CornerRadius="21" BackgroundColor="#F8F000" TextColor="#013715" FontSize="25"/>
            <Button Text="Restar" FontFamily="kawaii3"  CornerRadius="21" BackgroundColor="#F8F000" TextColor="#013715" FontSize="25"/>
        </StackLayout>
        <StackLayout Grid.Row="3"   Grid.Column="2"  Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button FontFamily="kawaii3" Text="Detalles" FontAttributes="Italic"  CornerRadius="21" BackgroundColor="Orange" HeightRequest="60" WidthRequest="220" TextColor="#013715" FontSize="25"/>

        </StackLayout>
        <Frame CornerRadius="30"  Padding="0" Grid.Row="2" Grid.Column="2" BorderColor="Black">
            <Image Source="https://i.ibb.co/dWR9GdP/papas3.png" Aspect="AspectFit" WidthRequest="25"/>
        </Frame>
    </Grid>
</ContentPage>